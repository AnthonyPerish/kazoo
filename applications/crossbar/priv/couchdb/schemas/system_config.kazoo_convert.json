{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "_id": "system_config.kazoo_convert",
    "description": "Schema for kazoo_convert system_config",
    "properties": {
        "convert_command_timeout": {
            "default": 120000,
            "description": "timeout in milliseconds for the convert command",
            "type": "integer"
        },
        "convert_image_command": {
            "default": "convert ~s -resample 204x98 -units PixelsPerInch -compress group4 -size 1728x1078 ~s",
            "description": "command to resample tiff images for faxing",
            "type": "string"
        },
        "convert_openoffice_command": {
            "default": "libreoffice --headless --convert-to pdf ~s --outdir ~s  2>&1 |egrep 'parser error|Error' && exit 1 || exit 0",
            "description": "kazoo_convert convert_openoffice_command",
            "type": "string"
        },
        "convert_openoffice_document_command": {
            "default": "libreoffice --headless --convert-to pdf ~s --outdir ~s  2>&1 |egrep 'parser error|Error' && exit 1 || exit 0",
            "description": "command to convert openoffice compatible documents to pdf",
            "type": "string"
        },
        "convert_pdf_command": {
            "default": "/usr/bin/gs -q -r204x98 -g1728x1078 -dNOPAUSE -dBATCH -dSAFER -sDEVICE=tiffg3 -sOutputFile=~s -- ~s",
            "description": "command to convert pdf to tiff format",
            "type": "string"
        },
        "convert_tiff_command": {
            "default": "tiff2pdf -o ~s ~s",
            "description": "command to convert tiff to pdf",
            "type": "string"
        },
        "enable_openoffice": {
            "default": true,
            "description": "kazoo_convert enable_openoffice",
            "type": "boolean"
        },
        "fax_converter": {
            "default": "fax_converter",
            "description": "module to load for fax conversions",
            "type": "string"
        },
        "file_cache_path": {
            "default": "/tmp/",
            "description": "default working path for conversions files",
            "type": "string"
        },
        "serialize_openoffice": {
            "default": true,
            "description": "kazoo_convert serialize_openoffice",
            "type": "boolean"
        },
        "should_serialize_openoffice": {
            "default": true,
            "description": "serialize the operation of converting openoffice compatible documents",
            "type": "boolean"
        },
        "validate_pdf_command": {
            "default": "gs -dNOPAUSE -dBATCH -sDEVICE=nullpage ~s",
            "description": "command used to verify a pdf file",
            "type": "string"
        },
        "validate_tiff_command": {
            "default": "tiff2pdf -o ~s ~s",
            "description": "command used to verify a tiff file",
            "type": "string"
        }
    },
    "type": "object"
}
